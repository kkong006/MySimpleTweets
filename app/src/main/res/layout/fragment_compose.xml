<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_compose"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/etNewTweet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="What's happening?"
            android:inputType="textMultiLine" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/etNewTweet">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_image_upload"
                android:backgroundTint="@android:color/transparent"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_gif"
                android:backgroundTint="@android:color/transparent"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_poll"
                android:backgroundTint="@android:color/transparent"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_location"
                android:backgroundTint="@android:color/transparent"/>

            <TextView
                android:id="@+id/tvCharacterCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="140"
                android:maxLength="140" />

            <Button
                android:id="@+id/btSubmitNewTweet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etNewTweet"
                android:textColor="@android:color/white"
                android:background="@drawable/shape_tweet_button"
                android:textAllCaps="false"
                android:text="Tweet"
                android:padding="0dp"
                android:layout_margin="5dp"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>